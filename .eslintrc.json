{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
		"eslint:recommended",
		"plugin:prettier/recommended",
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
		"sourceType": "module"
  },
  "rules": {
		"prettier/prettier": [
			"error",
			{ "endOfLine": "auto", "useTabs": true },
			{ "usePrettierrc": true }
		],
		"no-restricted-imports": "off",
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "no-param-reassign": ["error", { "props": false }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "mjs": "never"
      }
    ]
  }
}
